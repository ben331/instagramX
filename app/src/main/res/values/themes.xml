<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_red</item>
        <item name="colorSecondaryVariant">@color/rose</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
    </style>

    //App_Name------------------------------------------------------------------------------
    <style name="AppName">

    </style>

    //Buttons------------------------------------------------------------------------------
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_trans_style</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="ButtonAccentStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_accent_style</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="ButtonTransStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_trans_style</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Titles------------------------------------------------------------------------------
    <style name ="Titles">

    </style>

    //Plain Text------------------------------------------------------------------------------
    <style name ="PlainText">

    </style>
</resources>